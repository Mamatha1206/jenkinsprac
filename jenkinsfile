pipeline {
    agent any

    environment {
        DOCKER_USERNAME = credentials('docker-username')  // Use Jenkins Credentials ID
        DOCKER_PASSWORD = credentials('docker-password')
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Mamatha1206/jenkinsprac', branch:'main'
            }
        }

        stage('Install Tools') {
            steps {
                sh '''
                  apt update
                  apt install -y python3 python3-venv openjdk-17-jdk maven docker.io
                '''
            }
        }

        stage('Build Maven (optional for Flask)') {
            when {
                expression { fileExists('pom.xml') }
            }
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Docker Build & Push') {
            steps {
                sh '''
                  docker build -t mamatha0124/flaskapp .
                  echo "$DOCKER_PASSWORD" | docker login -u "$DOCKER_USERNAME" --password-stdin
                  docker push mamatha0124/flaskapp
                '''
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh '''
                  kubectl apply -f k8s/deployment.yaml
                  kubectl apply -f k8s/service.yaml
                '''
            }
        }
    }
}

